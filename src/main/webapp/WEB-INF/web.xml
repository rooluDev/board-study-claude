<?xml version="1.0" encoding="UTF-8"?>
<!--
  게시판 시스템 웹 애플리케이션 배포 서술자 (Deployment Descriptor)

  Servlet 6.0 (Jakarta EE 10) 기반 웹 애플리케이션 설정
  - Servlet 매핑
  - 세션 설정
  - 에러 페이지 설정
  - Welcome 파일 설정
-->
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

  <!-- 애플리케이션 이름 -->
  <display-name>Board System</display-name>

  <!-- 애플리케이션 설명 -->
  <description>
    Servlet/JSP 기반 CRUD 게시판 시스템
  </description>

  <!-- Welcome 파일 목록 -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- 세션 타임아웃 (30분) -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <!-- 에러 페이지 설정 -->
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/error/404.jsp</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/views/error/500.jsp</location>
  </error-page>

  <!-- 파일 업로드 임시 저장 디렉토리 -->
  <context-param>
    <param-name>file.upload.directory</param-name>
    <param-value>/uploads</param-value>
  </context-param>

  <!-- 최대 파일 업로드 크기 (2MB) -->
  <context-param>
    <param-name>file.max.size</param-name>
    <param-value>2097152</param-value>
  </context-param>

  <!--
    Servlet 매핑은 각 Servlet 클래스 작성 시 @WebServlet 애노테이션으로 설정
    또는 이 파일에 <servlet> 및 <servlet-mapping> 태그로 추가 가능
  -->

</web-app>